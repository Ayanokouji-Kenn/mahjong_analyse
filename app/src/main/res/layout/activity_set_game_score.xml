<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="设置东家点棒数量">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_east"
            android:textSize="24sp"
            android:layout_width="200dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="设置南家点棒数量">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_south"
            android:textSize="24sp"
            android:layout_width="200dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:hint="设置西家点棒数量">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_west"
            android:textSize="24sp"
            android:layout_width="200dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:hint="设置北家点棒数量">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_north"
            android:layout_width="200dp"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>


<Button
    android:id="@+id/btn_save"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_corner_rec"
    android:text="保存"
    android:textSize="24sp"/>
</LinearLayout>
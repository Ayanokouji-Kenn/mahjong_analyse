<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="vm"
            type="com.uu.mahjong_analyse.ui.MainVM"/>
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true" >

    <LinearLayout
        android:layout_below="@id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/text_input_layout"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:onClick="@{listener::onClick}"
            android:id="@+id/tv_east"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="东家"
            android:text="@{vm.players[0].name}"
            android:textSize="25sp" />

        <TextView
            android:onClick="@{listener::onClick}"
            android:id="@+id/tv_south"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{vm.players[1].name}"
            android:hint="南家"
            android:textSize="25sp" />

        <TextView
            android:onClick="@{listener::onClick}"
            android:id="@+id/tv_west"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="西家"
            android:text="@{vm.players[2].name}"
            android:textSize="25sp" />

        <TextView
            android:onClick="@{listener::onClick}"
            android:id="@+id/tv_north"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="北家"
            android:text="@{vm.players[3].name}"
            android:textSize="25sp" />

        <TextView
            android:onClick="@{listener::onClick}"
            android:id="@+id/tv_ok"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp25"
            android:background="@drawable/shape_round_corner_rec"
            android:text="@string/start_game" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/input_new_player"
        android:id="@+id/text_input_layout"
        android:layout_width="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:ellipsize="end"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
</layout>